<% content_for :titlebar do %>
  <h1><%= link_to "Project #{project.name}", project_url(project) %> > Material Trackings</h1>
  <div class="nav">
    <%= link_to "New Material Tracking", new_project_material_tracking_url(project) %>
  </div>
<% end %>

<% content_for :sidebar do %>
  <%= render :partial => 'projects/project_sidebar' %>
<% end %>

<table class="grid">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th></th>
  </tr>
  <% material_trackings.each do |material_tracking| %>
    <tr>
      <td><%= material_tracking.name %></td>
      <td><%= material_tracking.description %></td>
      <td><%= link_to "Edit", edit_project_material_tracking_url(project, material_tracking) %> <%= link_to "Delete", project_material_tracking_url(project, material_tracking), :method => :delete, :confirm => "Are you sure you want to delete #{material_tracking.name}?" %></td>
    </tr>
  <% end %>
</table>