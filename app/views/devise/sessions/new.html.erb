<%= image_tag "logo.png" %>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="fields">
    <%= f.label :login %>
    <%= f.text_field :login %>
  </div>

  <div class="fields">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="fields"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div class="buttons"><%= f.submit "Sign in" %></div>
<% end %>

<%= render :partial => "devise/shared/links" %>