<% content_for :titlebar do %>
  <h1><%= company.name %> > Material Types</h1>
  <div class="nav">
    <%= link_to "New Material Type", new_material_type_url %>
  </div>
<% end %>

<table>
  <tr>
    <th>Name</th>
    <th>ASTM #</th>
    <th>Heat Number</th>
    <th></th>
  </tr>
  <% material_types.each do |material_type| %>
    <tr>
      <td><%= material_type.name %></td>
      <td><%= material_type.astm_number %></td>
      <td><%= material_type.heat_number %></td>
      <td><%= link_to 'Edit', edit_material_type_url(material_type) %> | <%= link_to 'Delete', material_type_url(material_type), :method => :delete, :confirm => "Are you sure you want to delete #{material_type.name}?" %></td>
    </tr>
  <% end %>
</table>