<%= form_for [:company_admin, customer] do |f| %>
  <%= f.error_messages %>
  <div class="fields">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="buttons">
    <%= f.submit customer.new_record? ? "Create" : "Update" %> <%= link_to "Cancel", company_admin_customers_url %>
  </div>
<% end %>