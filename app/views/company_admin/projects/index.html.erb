<% content_for :titlebar do %>
  <h1><%= link_to company.name, company_admin_dashboard_url %> > Projects</h1>
  <div class="nav">
    <%= link_to "New Project", new_company_admin_project_url %>
  </div>
<% end %>

<% content_for :sidebar do %>
  <%= render :partial => 'company_admin/shared/sidebar' %>
<% end %>


<table class="grid">
  <tr>
    <th>Project #</th>
    <th>Customer</th>
    <th>Project</th>
    <th>PO #</th>
    <th></th>
  </tr>
  <% projects.each do |project| %>
    <tr>
      <td><%= link_to project.name, company_admin_project_url(project) %></td>
      <td><%= project.customer.name %></td>
      <td><%= project.project_name %></td>
      <td><%= project.purchase_order_number %></td>

      <td><%= link_to "Edit", edit_company_admin_project_url(project) %></td>
    </tr>
  <% end  %>
</table>
