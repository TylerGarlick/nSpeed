<%= form_for [:company_admin, person] do |f| %>
  <div class="fields">
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>
  <div class="fields">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>
  <div class="fields">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div class="fields">
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </div>
  <div class="fields">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>
  <div class="fields">
    <%= f.label :address2 %>
    <%= f.text_field :address2 %>
  </div>
  <div class="fields">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>
  <div class="fields">
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>
  <div class="fields">
    <%= f.label :zip %>
    <%= f.text_field :zip %>
  </div>
  <div class="fields">
    <%= f.label :active %>
    <%= f.check_box :active %>
  </div>
  <div class="buttons">
    <%= f.submit person.new_record? ? "Create" : "Update" %> <%= link_to 'Cancel', company_admin_people_url %>
  </div>
<% end %>