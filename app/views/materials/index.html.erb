<% content_for :titlebar do %>
  <h1><%= link_to "Project #{project.name}", project_url(project) %> > Materials</h1>
  <div class="nav">
    <%= link_to "New Material", new_project_material_url(project) %>
  </div>
<% end %>

<% content_for :sidebar do %>
  <%= render :partial => 'projects/project_sidebar' %>
<% end %>


<%= form_tag project_materials_url(project), :method => :get do %>
  <div class="search_area">
    <%= search_field_tag :query, params[:value] %>
    <%= submit_tag "Search" %>
  </div>
<% end %>
<table class="grid">
  <tr>
    <th>
      <div class="action-menu">
        <input type="checkbox" class="select-all" />
        <div class="arrow"></div>
        <div class="menu">
          <ul>
            <li><a href="#" class="order_it">Order</a></li>
            <li>Item 2</li>
          </ul>
        </div>
      </div>
    </th>
    <th>Item #</th>
    <th>Name</th>
    <th>Heat Number</th>
    <th>Quantity</th>
    <th>Vendor</th>
    <th></th>
  </tr>
  <% documents.each do |document| %>
    <tr>
      <th colspan="8" class="document-header">Document:  <%= link_to document.name, project_document_url(project, document) %></th>
    </tr>
    <% document.materials.order(:item_number).each do |material| %>
      <tr>
        <td><input type="checkbox" class="checkbox" value="<%= material.id %>" /></td>
        <td><%= material.item_number %></td>
        <td><%= link_to material.name, project_material_url(project, material) %></td>
        <td><%= material.heat_number %></td>
        <td><%= material.quantity %></td>
        <td><%= material.vendor %></td>
        <td><%= link_to "Edit", edit_project_material_url(project, material) %> <%= link_to "Delete", project_material_url(project, material), :method => :delete, :confirm => "Are you sure you want to delete #{material.name}?" %></td>
      </tr>
    <% end %>
  <% end %>
  <tr>
    <th></th>
    <th>Item #</th>
    <th>Name</th>
    <th>Heat Number</th>
    <th>Quantity</th>
    <th>Vendor</th>
    <th></th>
  </tr>
</table>

<div class="modal jqmWindow">
  <h2>Order Materials</h2>

</div>

<script>
  $(function(){
    $(".select-all").change(function(){
      $(".checkbox").attr('checked', $(".select-all").is(':checked'));
    });
    $(".order_it").click(function(){
      $(".modal").jqmShow();
    });
  });
</script>